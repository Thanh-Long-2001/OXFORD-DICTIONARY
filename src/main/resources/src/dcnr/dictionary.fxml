                        <Insets bottom="5.0" />
                     </VBox.margin>
                        </Button>
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteWord" prefHeight="50.0" prefWidth="55.0" style="-fx-background-color: #ff004d;">
                            <graphic>
                                <ImageView fitHeight="41.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/remove_sb.png" />
                                    </image>
                                </ImageView>
                            </graphic></Button>
                    </children>
                </VBox>
                <Button fx:id="speak" layoutX="533.0" layoutY="8.0" mnemonicParsing="false" onAction="#pronounce" prefHeight="45.0" prefWidth="45.0" style="-fx-background-color: #c8ff00;" AnchorPane.rightAnchor="17.0" AnchorPane.topAnchor="8.0">
                    <graphic>
                        <ImageView fitHeight="33.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/speak_sb.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
    </children>
